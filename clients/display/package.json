{
  "name": "@luminous/display",
  "version": "0.1.0",
  "description": "Luminous Display Application - Family Command Center for Wall-Mounted Displays",
  "author": "Luminous Team",
  "license": "AGPL-3.0",
  "main": "electron/main.js",
  "homepage": "https://github.com/luminous-app/luminous",
  "repository": {
    "type": "git",
    "url": "https://github.com/luminous-app/luminous.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:dev": "ng serve --configuration dev",
    "start:stg": "ng serve --configuration stg",
    "build": "ng build",
    "build:dev": "ng build --configuration dev",
    "build:stg": "ng build --configuration stg",
    "build:prod": "ng build --configuration production",
    "config:fetch": "node scripts/fetch-azure-config.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadless",
    "lint": "ng lint",
    "typecheck": "tsc --noEmit",
    "electron:dev": "npm run build:dev && electron .",
    "electron:stg": "npm run build:stg && electron .",
    "electron:start": "electron .",
    "electron:build": "npm run build:prod && electron-builder build",
    "electron:build:dev": "npm run build:dev && electron-builder build",
    "electron:build:stg": "npm run build:stg && electron-builder build",
    "electron:build:linux": "npm run build:prod && electron-builder build --linux",
    "electron:build:linux:dev": "npm run build:dev && electron-builder build --linux",
    "electron:build:linux:stg": "npm run build:stg && electron-builder build --linux",
    "electron:build:win": "npm run build:prod && electron-builder build --win",
    "electron:build:win:dev": "npm run build:dev && electron-builder build --win",
    "electron:build:win:stg": "npm run build:stg && electron-builder build --win",
    "electron:build:mac": "npm run build:prod && electron-builder build --mac",
    "electron:build:mac-intel": "npm run build:prod && electron-builder build --mac --x64",
    "electron:build:mac-arm": "npm run build:prod && electron-builder build --mac --arm64",
    "electron:build:mac-universal": "npm run build:prod && electron-builder build --mac --universal",
    "electron:build:all": "npm run build:prod && electron-builder build --linux --win --mac",
    "electron:publish": "npm run build:prod && electron-builder build --publish always"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular/cli": "^19.2.19",
    "@angular/compiler-cli": "^19.2.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.23",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.7.2"
  },
  "build": {
    "appId": "com.luminous.display",
    "productName": "Luminous Display",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/display/**/*",
      "electron/**/*",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64", "arm64"] },
        { "target": "deb", "arch": ["x64", "arm64"] },
        { "target": "tar.gz", "arch": ["x64", "arm64"] }
      ],
      "icon": "build/icons",
      "category": "Utility",
      "maintainer": "Luminous Team <team@luminous.app>",
      "synopsis": "Family Command Center Display",
      "description": "Wall-mounted family command center display application for viewing schedules, tasks, and household information."
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Luminous Team"
    },
    "mac": {
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] },
        { "target": "zip", "arch": ["x64", "arm64"] }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "license": "../../LICENSE"
    },
    "publish": {
      "provider": "github",
      "owner": "luminous-app",
      "repo": "luminous",
      "releaseType": "release"
    }
  }
}
